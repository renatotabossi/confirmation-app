{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "allowJs": true,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": ["es2021"],
      "module": "commonjs",
      "target": "es2021",
      "strict": true,
      "preserveConstEnums": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "paths": {
        "~shared/*": ["./shared/*"]
      },
      "outDir": "./dist",
      "rootDirs": [
        "./src",
        "./shared"
      ]
    },
    "exclude": [
      "node_modules",
      "./dist/**/*"
    ],
    "include": [
      "src/**/*"
  ]
}